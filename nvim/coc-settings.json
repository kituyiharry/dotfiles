{
  "hover.floatConfig": {
    "border": true
  },
    "languageserver": {
        "sql": {
            "command": "~/go/bin/sqls",
            "args": ["-config", "$HOME/.config/sqls/config.yml"],
            "filetypes": ["sql"],
            "shell": true
        },
        "ocaml-lsp": {
          "command": "opam",
            "args": ["config", "exec" , "--", "ocamllsp"],
            "filetypes": ["ocaml" , "omlet"],
            "shell": true
        },
        "lua_language_server": {
          "command": "/opt/homebrew/bin/lua-language-server",
          "rootPatterns": ["init.lua"],
          "filetypes": ["lua"]
        },
        "gopls": {
          "command": "gopls",
          "rootPatterns": ["go.mod"],
          "filetypes": ["go"]
        }
    }
}
